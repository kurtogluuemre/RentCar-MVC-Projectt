@model IEnumerable<MVC_CASE.Models.Car>

@{
    ViewData["Title"] = "Arabaları Yönet";
}

<h2>Arabaları Yönet</h2>

<a asp-controller="Admin" asp-action="Create" class="btn btn-primary mb-3">Yeni Araba Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Henüz hiç araba eklenmedi.</td>
            </tr>
        }
        else
        {
            foreach (var car in Model)
            {
                <tr>
                    <td><img src="@car.ResimUrl" width="100" /></td>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.Price ₺</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
