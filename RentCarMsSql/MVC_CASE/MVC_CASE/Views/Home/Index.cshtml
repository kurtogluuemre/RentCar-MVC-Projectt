@model List<MVC_CASE.Models.Car>
@using Microsoft.AspNetCore.Identity
@inject UserManager<Kullanici> UserManager
@inject SignInManager<Kullanici> SignInManager

<h2 class="text-center mb-4">Araba Listesi</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var car in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@car.ResimUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="@car.Brand">
                <div class="card-body">
                    <h5 class="card-title">@car.Brand @car.Model</h5>
                    <p class="card-text">Yıl: @car.Year</p>
                    <p class="card-text">Fiyat: ₺@car.Price</p>
                    <p class="card-text">Kategori: @car.Category?.Name</p>
                </div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="card-footer text-center">
                        <a class="btn btn-success kirala-btn" data-id="@car.Id">Kirala</a>
                    </div>
                }
            </div>
        </div>
    }
</div>